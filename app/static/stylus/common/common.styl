@import '../core/variables.styl';
@import '../core/mixins.styl';

.sr
  sr()

.container
  position relative
  max-width calc(100% - 90px)
  width 100%
  margin 0 auto
  +media(1279px)
    max-width calc(100% - 30px)

  &--static
    width 1200px
    max-width calc(100% - 90px)
    +media(1600px)
      width 1100px
    +media(1279px)
      width 995px
      max-width calc(100% - 30px)

  &--small
    width 1520px
    max-width calc(100% - 90px)
    margin 0 auto
    +media(1600px)
      width 1100px
    +media(1279px)
      max-width calc(100% - 30px)

  &--x5
    display: flex
    justify-content space-between
    align-items flex-end
    height 130px
    +media(1279px)
      flex-wrap: wrap
      justify-content flex-start
      position relative
      padding-top 30px

.i
  &__call
    background url(../img/phone.png) center no-repeat
    +media(1600px)
      background-size: 13px !important

  &__search
    background url(../img/zoom.png) center no-repeat
    +media(1600px)
      background-size: 13px !important

  &__geo
    background url(../img/manager.png) center no-repeat
    +media(1600px)
      background-size: 13px !important

  &__price
    background url(../img/price.png) center no-repeat
    +media(1600px)
      background-size: 13px !important

.breadcrumbs
  display flex
  align-items center
  padding 31px 0
  +media(1600px)
    padding 24px 0
  +media(1010px)
    padding 10px 0
  &--item
    opacity 0.73
    color #363535
    font-family "Arial", sans-serif
    font-size 18px
    font-weight 400
    display flex
    align-items center
    +media(1600px)
      font-size: 14px
    +media(1010px)
      font-size: 9px
    &::after
      content: ''
      display block
      width 4px
      height 10px
      background url(../img/arrow-gray.png) center no-repeat
      background-size cover
      margin 0 10px
      +media(1600px)
        width 3px
        height 7px
        margin 0 7px
    &:nth-last-child(1)
      opacity 1
      &::after
        display none

.read-more
  color $orange
  font-size 18px
  font-weight 400
  line-height 22px
  text-decoration underline
  text-align right
  display block
  +media(1600px)
    font-size: 16px
    line-height 20px
  +media(1010px)
    font-size: 11px
    line-height 16px

input
  width 280px
  height 50px
  border-radius 3px
  border 1px solid #f7901e
  background-color #ffffff
  padding 18px 13px
  +media(1600px)
    width 200px
    height 45px
  +media(1279px)
    width 310px
  +media(1010px)
    width 100%
    height 35px

.btn
  width 280px
  height 50px
  display flex
  justify-content center
  align-items center
  text-transform uppercase
  cursor pointer
  position relative
  z-index 1
  overflow hidden
  &::before
    content: ''
    display block
    position absolute
    left 0
    top 0
    width 100%
    height 100%
    background #ffffff
    opacity 0
    transition: $fast
    z-index -1
  +media(1600px)
    width 200px
    height 45px
  +media(1279px)
    width 310px
  +media(1010px)
    height 35px
  &--orange
    color #ffffff
    background $orange
    transition: $fast
    &:hover
      background transparent
      color: $orange !important
      &::before
        opacity 1
    &:active
      text-shadow: 0 0 1px $orange
      &::before
        box-shadow: inset 0 0 10px -2px $orange

.services
  width 1790px
  max-width calc(100% - 90px)
  margin 105px auto
  display flex
  justify-content space-between
  align-items center
  +media(1600px)
    width 1300px
    margin 70px auto
    max-width calc(100% - 30px)
  +media(1279px)
    width 100%
    flex-wrap: wrap
  +media(960px)
    margin-bottom 0
  &__item
    width 394px
    height 179px
    border-radius 3px
    border 2px solid #ff8b00
    background-color #ffffff
    display flex
    flex-direction: column
    align-items center
    justify-content center
    color $orange
    font-size 30px
    font-weight 700
    text-align center
    line-height 1
    transition: $fast
    &:hover
      background $orange
      color #ffffff
      img
        filter grayscale(1) brightness(100)
    +media(1800px)
      width 320px
      font-size: 24px
    +media(1600px)
      font-size: 22px
      width 280px
      height 155px
    +media(1279px)
      width 225px
      height 105px
      font-size: 17px
    +media(960px)
      width 42vw
      height 22vw
      margin-bottom 7vw
      font-size: 3.5vw

    img
      width auto
      height 63px
      margin-bottom 5px
      transition: $fast
      backface-visibility: hidden
      +media(1600px)
        height 48px
      +media(1279px)
        height 35px
      +media(960px)
        height 8vw

.link-orange
  color $orange

.tdu
  text-decoration underline

.like,
.print
  opacity 0.8
  color #363535
  font-size 14px
  font-style italic
  line-height 22px
  text-decoration underline
  background url(../img/add.png) left 1px no-repeat
  background-size 18px
  padding-left 25px
  cursor pointer
  transition: $fast
  +media(1600px)
    font-size: 12px
  +media(1010px)
    font-size: 11px
    background-size 15px
    padding-left 20px
  &:hover
    opacity 1
    text-decoration none

.print
  background url(../img/print.png) left 4px no-repeat
  background-size 14px
  padding-left 20px

.nopadding
  padding 0 !important
.nomargin
  margin 0 !important

.col
  display flex
  flex-direction: column
  justify-content flex-start
  align-items flex-start

.black-link
  color #363535

.tabs-row
  display flex
  justify-content flex-start
  align-items center
  margin 45px 0
  +media(1600px)
    margin 30px 0

.tab-list
  width 280px
  height 99px
  box-shadow 0 5px 12px 1px rgba(140, 140, 140, 0.26)
  border-radius 3px
  border 1px solid $orange
  background-color #ffffff
  display flex
  justify-content center
  align-items center
  margin-right 30px
  transition: $fast
  +media(1600px)
    width 220px
    height 80px
    padding-right 10px
  +media(1279px)
    height 67px
    margin-right 15px
  +media(1010px)
    width 100px
    height 40px
    padding-right 0
  &:hover,
  &--active
    background $orange
    span
      color #ffffff
    img
      filter grayscale(1) brightness(100)
  span
    color $orange
    font-size 20px
    font-weight 700
    line-height 30px
    transition: $fast
    width 160px
    +media(1600px)
      font-size: 17px
      line-height 23px
      width 130px
    +media(1010px)
      font-size: 10px
      line-height 1.2
      width 80px
  img
    width auto
    height 34px
    margin-right 10px
    +media(1600px)
      height 30px
    +media(1010px)
      display none

.tab-list--active
  span
    color #ffffff