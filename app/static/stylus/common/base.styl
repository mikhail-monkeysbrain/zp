@import "../core/variables.styl";

*
  box-sizing border-box
  -webkit-tap-highlight-color transparent

body
  font 16px/1.5 $mainFont
  overflow-x: hidden

a,
button,
input
  &:focus
    outline 0

a
  text-decoration none

button
  border: 0

img
  width 100%
  height auto

figure
  margin 0

.ul
  margin 0
  padding 0
  list-style none

.grid
  min-height: $gridHeight

h1,
h2
  color #363535
  font-size 50px
  font-weight 700
  line-height 1
  padding 0
  margin 0
  +media(1600px)
    font-size: 42px
  +media(1279px)
    font-size: 35px
  +media(1025px)
    font-size: 22px

h2
  text-align center
  padding 30px 0
  +media(1025px)
    padding 10px

p
  color #363535
  font-size 16px
  font-weight 400
  line-height 22px
  padding-bottom 30px
  +media(1600px)
    font-size: 14px
    line-height 20px
  +media(1025px)
    font-size: 11px
    line-height 16px
    padding-bottom 10px