.finder
    &--horisontal
        width 100%
        height: 212px
        background url(../img/finder.jpg) center no-repeat
        background-size cover
        margin 30px 0
        +media(1025px)
            height 380px

    &__label
        &:nth-last-child(1)
            +media(1279px)
                position absolute
                right 0
                bottom -30px
            +media(1025px)
                position relative
                right 0
                left 0
                bottom 0
                width 100%
                min-width auto
                .btn
                    width 100%
        +media(1279px)
            width 33.34%
            min-width 333px
        +media(1025px)
            width 100%
            min-width 270px
            margin-bottom 10px

        p
            color #353535
            font-size 14px
            font-weight 400
            padding 0
            margin 0
            +media(1600px)
                font-size: 12px
            +media(1025px)
                font-size: 9px

    &__button
        +media(1279px)
            position absolute
            right 0
            bottom -30px
            width 310px
            min-width 310px
        +media(1025px)
            position relative
            right 0
            left 0
            bottom 0
            width 100%
            margin-top 10px
            min-width auto