.card-top
    display flex
    justify-content space-between

    &--revert
        +media(1279px)
            flex-direction: column-reverse

.top-about
    width calc(100% - 310px)
    flex-grow 1
    &--learn
        p
            padding-bottom 0 !important
    &--top-pic
        display flex
        justify-content space-between
        align-items center
        padding 30px 0
        +media(1279px)
            display none
        img
            max-width calc(50% - 15px)

    &--slider-pic
        display flex
        justify-content space-between
        align-items center
        margin-bottom 48px
        div
            display flex !important
            justify-content center
            align-items center
            padding 0 15px
            +media(1279px)
                padding 0

    &--revert
        width 100%
        max-width calc(100% - 465px)
        +media(1600px)
            max-width calc(100% - 340px)
        +media(1279px)
            width 100%
            max-width 100%


.left-aside
    width 280px
    flex-shrink 0
    padding 24px 0
    box-shadow 0 0 8px 1px rgba(171, 171, 171, 0.18)
    border-radius 3px
    background-color #ffffff
    margin-right 30px
    padding-right 10px
    position relative
    +media(1600px)
        width 210px
    +media(1279px)
        display none
    &::after
        content: ''
        display block
        width 20px
        height 100%
        background #fff
        position absolute
        right 10px
        top 0

    &--card
        width 435px
        align-self: flex-start
        display flex
        flex-direction: column
        padding 19px
        position relative
        +media(1600px)
            width 310px
        +media(1279px)
            width 100%
            margin 0
            flex-direction: row
            justify-content space-between
            margin-bottom 40px
        +media(1010px)
            flex-direction: column
        &::after
            display none
        .left-aside__heading
            padding-left 0
            padding-bottom 14px
            padding-top 19px
            line-height 1.3
            +media(1600px)
                font-size: 16px
                padding-top 9px
                padding-bottom 12px
            +media(1010px)
                font-size: 14px
        .btn
            align-self: center
            font-weight 600
            width 200px
            height 43px
            margin 0 auto 17px
        .row
            width 100%
            display flex
            justify-content space-between
            align-items center
            padding-bottom 45px
        .print
            position absolute
            right 0px
            bottom -40px
            +media(1600px)
                bottom -35px
            +media(1279px)
                display none
        .like
            +media(1279px)
                position absolute
                right 80px
                bottom 20px
            +media(1010px)
                position static
        span,
        ol
            color #363535
            font-size 16px
            font-weight 400
            line-height 22px
            +media(1600px)
                font-size: 14px
                line-height: 20px
            +media(1279px)
                font-size: 13px
                line-height 19px
            +media(1010px)
                font-size: 11px
                line-height 17px
        ol
            padding-left 21px
            +media(1600px)
                padding-top 0
                margin-top 0
        .string
            font-size: 18px
            color $orange
            +media(1600px)
                font-size: 16px
            +media(1010px)
                font-size: 14px
            &--big
                font-size: 22px
                +media(1600px)
                    font-size: 20px
                +media(1279px)
                    font-size: 18px

    &__heading
        padding-left 7px
        color $orange
        font-size 18px
        font-weight 700
        +media(1600px)
            font-size: 16px

    &__list
        list-style: none
        padding-left 0
        max-height: 240px
        overflow: overlay
        position relative
        padding-bottom 20px
        +media(1600px)
            max-height: 208px

    &__shadow
        width 100%
        height 30px
        background: linear-gradient(to bottom,rgba(255,255,255,0) 0%, #FFF 55%,#fff 100%)
        margin-top -40px
        position relative
        text-align center
        cursor pointer
        &:nth-of-type(4)
            display none
        img
            width 25px
            height 9px
            margin 0 auto

    &__item
        font-size 16px
        font-weight 400
        padding-left 0
        &:hover
            a
                color: $orange
                text-shadow: 0 0 1px $orange
        +media(1600px)
            font-size: 14px
        a
            color #363535
            padding-left 21px
            transition: $fast
        &.left-aside__item--active
            background #ffe2c1
            font-weight 700

.slider__5
    +media(1279px)
        width calc(100% + 30px)
        left -15px
        margin-top 10px
    img
        width 280px
        height 176px
        object-fit: cover
        +media(1600px)
            width 196px
            height 117px
        +media(1279px)
            width 100%
            height 62vw
            object-fit: cover
            object-position: center
    &--card
        +media(1279px)
            padding-bottom 20px
            margin-bottom 50px
        img
            +media(1279px)
                height 35vw
            +media(1010px)
                height 55vw
            +media(767px)
                height 100vw

.descr-hidden
    display none
    margin-top -30px
    p
        padding-top 0
        padding-bottom 0

.read-more
    height 20px
    overflow hidden
    span
        transform: translateY(0)
        transition: $fast
        display block
.collapse.read-more
    span
        transform: translateY(-20px)

.left-aside__shadow.left-aside__shadow--top
    transform: scaleY(-1) translateY(-40px)
    position: relative
    z-index -1
    &.vis
        z-index 1

.left-aside__shadow--top,
.left-aside__shadow
    &:nth-child(8)
        display none !important

div::selection,
img::selection
    background: transparent

.col--site
    +media(1279px)
        margin-left 150px
    +media(1010px)
        margin-left 0
    .btn
        +media(1279px)
            margin-bottom 30px
            margin-top -20px