.form-footer
    width 100%
    height 526px
    background url(../img/form.jpg) center no-repeat
    background-size cover
    +media(1025px)
        background url(../img/form.jpg) center left no-repeat
        background-size: cover
        padding-bottom: 30px
        height: auto

    &__container
        width 1360px
        max-width calc(100% - 90px)
        margin 0 auto
        display flex
        justify-content space-between
        align-items center
        height 100%
        +media(1279px)
            align-items flex-start
            padding-top 40px
            max-width calc(100% - 30px)
        +media(1025px)
            flex-direction: column
            align-items center

        h2
            text-align left
            padding 0
            margin 0

    &__heading
        max-width 50%
        +media(1025px)
            width 100%
            max-width 100%
            text-align center
            h2
                text-align center
        &--description
            color #363535
            font-size 25px
            font-weight 400
            line-height 30px
            padding 0
            padding-top 32px
            margin 0
            text-shadow: 0px 0px 1px #363535
            +media(1600px)
                font-size: 22px
                line-height 28px
            +media(1279px)
                font-size: 18px
                line-height 24px
                padding-top 50px
            +media(1025px)
                width 100%
                text-align center
                padding 20px 0

    &__form
        max-width 50%
        width 435px
        height 418px
        display flex
        flex-direction: column
        align-items flex-start
        justify-content space-between
        +media(1025px)
            width 100%
            max-width 100%
            text-align center
            align-items center

        input,
        textarea
            width 435px
            height 43px
            border-radius 3px
            border 1px solid #ff8b00
            background-color #ffffff
            padding 10px 17px
            +media(1279px)
                max-width 100%

        textarea
            height 127px

        .form-submit
            width 185px
            height 43px
            border-radius 3px
            background #f7901e
            font-weight 700
            color #ffffff
            display flex
            justify-content center
            align-items center
            line-height 1
            padding 0
            margin 0 auto
            cursor pointer

        span
            color #919191
            font-size 13px
            font-weight 400
            line-height 1
            padding 0
            a
                color $orange
            +media(1025px)
                width 100%
                text-align center
                display block

::-webkit-input-placeholder
    opacity 1
    transition: $fast
    text-shadow: 0 0 .5px #000
::-moz-placeholder
    opacity 1
    transition: $fast
    text-shadow: 0 0 .5px #000
:-moz-placeholder
    opacity 1
    transition: $fast
    text-shadow: 0 0 .5px #000
:-ms-input-placeholder
    opacity 1
    transition: $fast
    text-shadow: 0 0 .5px #000

:hover::-webkit-input-placeholder
    opacity 0.5
:hover::-moz-placeholder
    opacity 0.5
:hover:-moz-placeholder
    opacity 0.5
:hover:-ms-input-placeholder
    opacity 0.5

:focus::-webkit-input-placeholder
    opacity 0
:focus::-moz-placeholder
    opacity 0
:focus:-moz-placeholder
    opacity 0
:focus:-ms-input-placeholder
    opacity 0