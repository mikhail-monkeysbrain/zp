.single-tour,
.multy-tour,
.health-tour
    padding 15px 0
    display flex
    justify-content space-around
    align-items center
    +media(1279px)
        padding-left 15px
    +media(1010px)
        padding-left 0

.tour-card
    width 590px
    height 414px
    overflow hidden
    position relative
    margin 0 15px
    +media(1600px)
        width 430px
        height 350px
    +media(1279px)
        width 385px
        height 275px
    +media(1010px)
        width 235px
        height 290px
        margin 0 8px

    &--health
        height 500px
        margin 0 15px
        +media(1600px)
            height 450px
        +media(1279px)
            height 385px
        +media(1010px)
            margin 0 8px

    &:hover
        .tour-card__price
            background $orange
            &::after,
            &::before
                color: $orange
        .tour-card__buy
            transform: translateY(-70px)
            opacity 1
            +media(1279px)
                transform: translateY(0)
        img
            transform: scale(1.2)

    &::after
        content: ''
        display block
        position absolute
        left 0
        top 0
        width 100%
        height 100%
        background-color #404040
        opacity 0.59
        z-index -1

    &__heading
        color #ffffff
        font-size 30px
        font-weight 700
        padding-top 48px
        padding-left 20px
        line-height 1.2
        +media(1600px)
            font-size: 26px
            padding-top 34px
        +media(1279px)
            font-size: 22px
            padding-top 20px
            line-height 1
        +media(1010px)
            font-size: 14px
            padding-top 40px
            padding-left 8px

    &__price
        color #ffffff
        font-size 25px
        font-weight 700
        margin-top 48px
        padding 4px 21px 4px 15px
        background $dark
        position relative
        transition: $fast
        height 47px
        flex-shrink: 0
        +media(1600px)
            font-size: 20px
            padding-top 8px
            margin-top 34px
            padding 7px 5px 4px 10px
        +media(1279px)
            font-size: 17px
            margin-top 20px
            height 30px
            padding: 2px 10px 4px 10px
        +media(1010px)
            margin-top 8px
            font-size: 13px
            padding-top 4px
            flex-shrink: 0
        &::after,
        &::before
            content: ''
            display block
            position absolute
            color: $dark
            left -30px
            border: 20px solid transparent
            border-right: 20px solid
            transition: $fast
            +media(1279px)
                border: 10px solid transparent
                left -10px
        &::after
            top 0
            border-top: 20px solid
        &::before
            bottom 0
            border-bottom: 20px solid

    &__description
        color #ffffff
        font-size 16px
        font-weight 700
        line-height 22px
        margin 0
        padding 0
        padding-left 20px
        padding-top 21px
        height 135px
        +media(1600px)
            font-size: 12px
            line-height 18px
        +media(1279px)
            font-weight 400
            font-size: 11px
            line-height 1.2
            height 95px
        +media(1010px)
            padding-left 8px
            font-size: 9px
        & + .tour-card__days
            padding-top 10px

    &__days,
    &__duration,
    &__include,
    &__more
        color #ffffff
        font-size 16px
        font-weight 400
        line-height 22px
        padding-top 10px
        padding-left 20px
        +media(1600px)
            font-size: 14px
            line-height 20px
            padding-top 5px
        +media(1010px)
            font-size: 10px
            line-height 14px
            padding-top 10px
            padding-left 8px
        span
            font-weight 700
            color #ffffff
    &__duration
        padding-bottom 38px
        +media(1600px)
            padding-bottom 18px
        +media(1024px)
            padding-bottom 10px
        .tour-card--health &
            padding-bottom 10px
    &__days
        padding-top 35px
        +media(1600px)
            padding-top 45px
        +media(1279px)
            padding-top 35px
        +media(1010px)
            padding-top 10px
    &__include,
    &__more
        width 50%
        span
            display block
        i,
        span
            color #ffffff
    &__more
        i
            display block
            width 100%
        span
            width 50%
            display inline-block
            +media(1010px)
                display block

    &__buy
        position absolute
        left 0
        right 0
        margin 0 auto
        bottom -245px
        bottom -320px
        text-transform uppercase
        color #ffffff
        font-size 21px
        font-weight 700
        display block
        text-align center
        width 320px
        height 320px
        background $orange
        border-radius: 50%
        padding-top 30px
        opacity 0
        transition: $fast
        +media(1600px)
            font-size: 18px
        +media(1279px)
            font-size: 16px
            width 260px
            height 260px
            bottom -210px
            padding-top 20px
            opacity 1
        +media(1010px)
            font-size: 14px

    img
        position absolute
        left 0
        top 0
        width 100%
        height 100%
        object-fit: cover
        object-position: center
        z-index -2
        transition: $middle

    .row
        display flex
        width 100%
        justify-content space-between



.btn--next,
.btn--prev
    width 60px
    height 60px
    box-shadow 0 5px 18px 3px rgba(83, 83, 83, 0.16)
    background #ffb65e url(../img/arrow.png) 45% center no-repeat
    background-size 15px
    border-radius: 50%
    position absolute
    top calc(50% - 30px)
    z-index 2
    cursor pointer
    transition: $fast
    +media(1600px)
        width 51px
        height 51px
    +media(1279px)
        width 36px
        height 36px
        background-size 11px
    &:hover
        background $orange url(../img/arrow.png) 45% center no-repeat
        background-size 15px
        +media(1279px)
            background-size 11px

.btn--next
    left 10px
    +media(1279px)
        left 15px
    .jsSliderCards &
        left 75px
        +media(1279px)
            left 15px

.btn--prev
    right 10px
    transform: rotate(180deg)
    +media(1279px)
        right 15px
    .jsSliderCards &
        right 75px
        +media(1279px)
            right 15px

.slick-slider
    position relative
    margin-bottom 75px
    +media(1279px)
        margin-bottom 40px

.slick-dots
    position: absolute;
    bottom: -40px;
    left: 0;
    right: 0;
    display: flex;
    margin: 0 auto;
    width: 100%;
    justify-content: center;
    font-size: 0
    +media(1279px)
        bottom -20px
    li
        width 18px
        height 18px
        background $orange
        border-radius: 50%
        opacity 0.3
        margin 0 6px
        transition: $fast
        cursor pointer
        +media(1279px)
            width 11px
            height 11px
            margin 0 4px
        button
            display none
        &.slick-active
            opacity 1

.slick-slide
    outline: none !important